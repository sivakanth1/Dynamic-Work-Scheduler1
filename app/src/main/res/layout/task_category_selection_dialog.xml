<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/all_rounded_corners"
    android:backgroundTint="@color/white"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:id="@+id/category_1_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/all_rounded_corners">

            <TextView
                android:id="@+id/category_1_title_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category_1"
                android:textSize="15sp"
                android:textColor="@color/soft_black"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_sans"/>

            <TextView
                android:id="@+id/category_1_des_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="This type of tasks have deadline date, start time and end time. These task are supposed to be done on the mentioned date and time"
                android:textSize="12sp"
                android:textColor="@color/soft_black"
                android:fontFamily="@font/nunito_sans"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/category_2_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/all_rounded_corners">

            <TextView
                android:id="@+id/category_2_title_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category_2"
                android:textSize="15sp"
                android:textColor="@color/soft_black"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_sans"/>

            <TextView
                android:id="@+id/category_2_des_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="This type of tasks have deadline date, start time and end time. These task are supposed to be done on or before the deadline date and time"
                android:textSize="12sp"
                android:textColor="@color/soft_black"
                android:fontFamily="@font/nunito_sans"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/category_3_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/all_rounded_corners">

            <TextView
                android:id="@+id/category_3_title_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category_3"
                android:textSize="15sp"
                android:textColor="@color/soft_black"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_sans"/>

            <TextView
                android:id="@+id/category_3_des_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="This type of tasks have deadline date and estimated task duration. These task are supposed to be done on or before mentioned deadline date"
                android:textSize="12sp"
                android:textColor="@color/soft_black"
                android:fontFamily="@font/nunito_sans"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/Ok_BTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/tinted_all_rounded_corners"
                android:text="Ok"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>